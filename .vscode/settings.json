{
  "vetur.format.defaultFormatter.js": "vscode-typescript", //让vue中的js按编辑器自带的ts格式进行格式化
  "editor.wordWrapColumn": 120, //默认值为80，即每行80字符时自动换行。
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "bin": true,
    "obj": true,
    "dist": true,
    "Properties": true,
    ".vs": true,
    "*.csproj": true,
    "*.sln": true,
    "*.csproj.user": true,
    "*.suo": true,
    ".github": true,
    "tests": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
